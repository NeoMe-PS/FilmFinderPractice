<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/detail_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:text="Title text"
           android:textColor="@color/black"
           android:textSize="22sp" />

       <ImageView
           android:id="@+id/detail_img"
           android:layout_below="@+id/detail_title"
           android:layout_centerHorizontal="true"
           android:layout_height="400dp"
           android:layout_width="wrap_content"
           android:adjustViewBounds="true"
           android:contentDescription="Poster"/>

       <TextView
           android:id="@+id/detail_film_description"
           android:layout_width="240dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/detail_img"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="Description"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="14sp" />

       <CheckBox
           android:id="@+id/likeCheck"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/detail_film_description"
           android:layout_marginStart="25dp"
           android:text="Нравится" />

       <EditText
           android:layout_width="fill_parent"
           android:layout_height="100dp"
           android:layout_marginStart="20dp"
           android:layout_below="@+id/likeCheck"
           android:layout_marginEnd="20dp"
           android:hint="Напишите здесь ваш комментарий"
           android:autofillHints=""
           android:overScrollMode="always"
           android:scrollbarStyle="outsideInset"
           android:scrollbars="vertical"

           android:inputType="textMultiLine" />
   </RelativeLayout>
</ScrollView>